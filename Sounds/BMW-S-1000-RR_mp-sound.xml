<PropertyList>

 <fx>
     <engine>
		<name>engine</name>
		<path>Aircraft/BMW-S-RR/Sounds/BMW-S-RR-engine-high.wav</path>  <!--BMW-S-RR-engine -->
		<mode>looped</mode>
		<volume>
			<property>engines/engine/rpm</property>
			<factor>0.0002</factor>
			<min>0.1</min>
			<max>0.7</max>
			<offset>0.001</offset>
		</volume>
		<pitch>
			<property>engines/engine/rpm</property>
			<factor>0.000058</factor>
			<min>0.0</min>
			<max>0.7</max>
			<offset>0.4</offset>
		</pitch>
		<reference-dist>10</reference-dist>
		<max-dist>1100</max-dist>
    </engine>

	<engine>
	    <name>enginecrash</name>
	    <path>Aircraft/BMW-S-RR/Sounds/BMW-S-RR-broken.wav</path>
	    <mode>once</mode>
	     <condition>
		 <greater-than>
	       <property>sim/multiplay/generic/float[4]</property>
		   <value>0.95</value>
	   </greater-than>
	    </condition>
	    <volume>
	      <value>10.0</value>
	    </volume>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	  </engine>
</fx>
 
</PropertyList>
